{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["playwright"],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["tests/**/*.ts", "POM/**/*.ts"],
  "exclude": ["node_modules"]
}
